<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏底色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--控件选中或者点击获得焦点后的颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--&lt;!&ndash;和 colorAccent相反，正常状态下控件的颜色&ndash;&gt;-->
        <!--<item name="colorControlNormal">@color/black</item>-->
        <!--&lt;!&ndash;EditText 输入框中字体的颜色&ndash;&gt;-->
        <!--<item name="editTextColor">@color/black</item>-->
    </style>

    <style name="AppTheme" parent="@style/BaseAppTheme">
        <!--<item name="android:windowIsTranslucent">false</item>-->
    </style>

    <style name="AppBaseThemeMain"  parent="@style/BaseAppTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>


    <!-- 设置弹出窗口的属性，frame叠加，isfloat是否浮动，tarnslucent是否半透明，dim是背景是否变暗 -->
    <style name="Theme_audioDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="popup_window">
        <item name="android:windowEnterAnimation">@anim/push_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/push_alpha_out</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="selectPhotoDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="DialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/push_alpha_out</item>
    </style>

    <style name="ListviewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:cacheColorHint">#fff</item>
        <item name="android:divider">#00000000</item>
        <item name="android:dividerHeight">10dp</item>
        <item name="android:listSelector">#00000000</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
